<%= form_with model: @post, local: true, html: { class: "my-4" } do |form| %>
  
  
  <div class="form-group">
    <%= form.text_area :body, placeholder: "Enter your message", class: "form-control", rows: 3 %>
    <div class="actions">
      <div class="form-group">
        <%= form.file_field :image %>
      </div>
      <div class="form-group">
          <%= form.text_area :user_id, value: current_user.id, class:'d-none'%>
      </div>
      <%= form.submit class: "btn btn-primary" %>

    </div>
  </div>
<% end %>
